{
  "name": "netflux",
  "description": "Abstract peer to peer client transport API. Implementations based on WebRTC and webSocket to be done.",
  "version": "1.1.0-beta.1",
  "license": "AGPL-3.0",
  "main": "dist/netflux.es5.umd.js",
  "module": "dist/netflux.es5.module.node.js",
  "browser": "dist/netflux.es5.module.browser.js",
  "homepage": "https://doc.esdoc.org/github.com/coast-team/netflux",
  "repository": {
    "type": "git",
    "url": "https://github.com/coast-team/netflux.git"
  },
  "author": "Philippe Kalitine <philippe.kalitine@gmail.com> (http://philippe.kalitine.name/)",
  "bugs": {
    "url": "https://github.com/coast-team/netflux/issues"
  },
  "keywords": [
    "netflux",
    "webRTC",
    "p2p",
    "peer",
    "network"
  ],
  "files": [
    "dist/"
  ],
  "scripts": {
    "prebuild": "uglifyjs ./node_modules/webrtc-adapter/out/adapter_no_edge_no_global.js -c -o webrtc-adapter.js",
    "build": "rm -rf dist && node rollup.config.js",
    "testScripts": "rm -rf test/pretestScripts/.rolledup && node test/pretestScripts/rollup.config.js && pm2 gracefulReload test/pretestScripts/process.yml",
    "test:browsers": "npm run build && npm run testScripts && karma start",
    "test:chrome": "npm run test:browsers -- --browsers Chrome",
    "test:firefox": "npm run test:browsers -- --browsers Firefox",
    "pretest": "npm run build && rm -rf test/.rolledup && node test/rollup.config.js && npm run testScripts",
    "test": "node jasmine.conf.js && karma start",
    "test:node": "npm run pretest && node jasmine.conf.js",
    "test:coverage": "rm -rf coverage && npm run pretest && node jasmine.conf.js && karma start -- coverage",
    "test:travis": "npm run pretest && node jasmine.conf.js && karma start -- travis",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "lint": "eslint ./",
    "doc": "esdoc -c esdoc.json",
    "precommit": "npm run test:coverage",
    "commitmsg": "validate-commit-msg",
    "cz": "git-cz"
  },
  "dependencies": {
    "eventsource": "^0.2.1",
    "node-fetch": "^1.6.3",
    "rxjs": "^5.2.0",
    "text-encoding": "^0.6.4",
    "tslib": "^1.6.0",
    "webrtc-adapter": "^3.0.0",
    "ws": "^2.0.2"
  },
  "peerDependencies": {
    "uws": "^0.14.0",
    "wrtc": "0.0.x"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "commitizen": "^2.4.6",
    "cz-conventional-changelog": "^2.0.0",
    "esdoc": "^0.5.2",
    "eslint": "^3.7.0",
    "eslint-config-conaclos": "^1.2.0",
    "eslint-config-standard": "^7.0.1",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "husky": "^0.13.1",
    "istanbul": "^0.4.3",
    "jasmine": "^2.4.2",
    "jasmine-core": "^2.4.2",
    "jasmine-spec-reporter": "^3.0.0",
    "json": "^9.0.3",
    "karma": "^1.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.0.0",
    "karma-coverage-es6": "^0.2.7",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-rollup-preprocessor": "^4.0.0",
    "karma-spec-reporter": "0.0.30",
    "pm2": "^2.0.12",
    "rollup": "^0.41.1",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-filesize": "^1.0.0",
    "rollup-plugin-includepaths": "^0.2.2",
    "rollup-plugin-istanbul": "^1.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-string": "^2.0.2",
    "semantic-release": "^6.3.2",
    "sigver": "^12.0.0",
    "uglify-js": "^2.7.3",
    "validate-commit-msg": "^2.8.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
