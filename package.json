{
  "name": "netflux",
  "description": "Abstract peer to peer client transport API. Implementations based on WebRTC and webSocket to be done.",
  "version": "1.1.0-beta.8",
  "license": "AGPL-3.0",
  "main": "dist/netflux.cjs.js",
  "module": "dist/netflux.esm.js",
  "browser": "dist/netflux.umd.js",
  "homepage": "https://doc.esdoc.org/github.com/coast-team/netflux",
  "repository": {
    "type": "git",
    "url": "https://github.com/coast-team/netflux.git"
  },
  "author": "Philippe Kalitine <philippe.kalitine@gmail.com> (http://philippe.kalitine.name/)",
  "bugs": {
    "url": "https://github.com/coast-team/netflux/issues"
  },
  "engines": {
    "node": ">=8.1.4"
  },
  "keywords": [
    "netflux",
    "webRTC",
    "p2p",
    "peer",
    "network"
  ],
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rm -rf dist && rollup --config",
    "build:doc": "rm -rf dist/es6 && tsc -p tsconfig.doc.json",
    "build:testbot": "rollup -c test/util/rollup.config.js",
    "start:testbot": "pm2 gracefulReload test/util/process.yml",
    "pretest": "npm run build && npm run build:testbot && npm run start:testbot",
    "test": "karma start",
    "test:chrome": "npm run test -- --browsers Chrome",
    "test:firefox": "npm run test -- --browsers Firefox",
    "test:coverage": "rm -rf coverage && npm run test -- -- coverage",
    "test:travis": "npm run test -- -- travis",
    "test:node": "npm run pretest && node jasmine.conf.js",
    "proto": "pbjs -t static-module -w es6 --no-verify --no-delimited --no-convert src/index.proto -o src/Protobuf.es6.js && pbts src/Protobuf.es6.js -o src/Protobuf.d.ts",
    "postproto": "babel -o src/Protobuf.js src/Protobuf.es6.js; rm src/Protobuf.es6.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "lint": "tslint src/**/* -e 'src/**/*.proto' ",
    "precommit": "npm run test:coverage",
    "commitmsg": "validate-commit-msg",
    "cz": "git-cz"
  },
  "dependencies": {
    "protobufjs": "^6.8.0",
    "rxjs": "^5.2.0",
    "text-encoding": "^0.6.4",
    "uws": "^8.14.0",
    "webrtc-adapter": "^4.0.1"
  },
  "peerDependencies": {
    "wrtc": "0.0.x"
  },
  "devDependencies": {
    "@types/text-encoding": "0.0.31",
    "babel-preset-env": "^1.6.0",
    "commitizen": "^2.4.6",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "istanbul": "^0.4.3",
    "jasmine": "^2.4.2",
    "jasmine-core": "^2.7.0",
    "jasmine-spec-reporter": "^4.1.0",
    "json": "^9.0.3",
    "karma": "^1.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.0.0",
    "karma-coverage-es6": "^0.2.7",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-rollup-preprocessor": "^4.0.0",
    "karma-spec-reporter": "0.0.31",
    "kcors": "^2.2.1",
    "koa": "^2.2.0",
    "koa-router": "^7.1.1",
    "pm2": "^2.0.12",
    "rollup": "^0.45.2",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-filesize": "^1.0.0",
    "rollup-plugin-istanbul": "^1.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-re": "^1.0.6",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-strip": "^1.1.1",
    "rollup-plugin-typescript2": "^0.5.1",
    "semantic-release": "^6.3.2",
    "sigver": "^15.0.1",
    "tslib": "^1.7.1",
    "tslint": "^5.5.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.4.2",
    "validate-commit-msg": "^2.13.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
