{
  "name": "netflux",
  "description": "Abstract peer to peer client transport API. Implementations based on WebRTC and webSocket to be done.",
  "version": "1.0.0-rc.6",
  "license": "AGPL-3.0",
  "main": "dist/netflux.es5.umd.min.js",
  "jsnext:main": "dist/netflux.es2015.js",
  "homepage": "https://doc.esdoc.org/github.com/coast-team/netflux",
  "repository": {
    "type": "git",
    "url": "https://github.com/coast-team/netflux.git"
  },
  "author": "Philippe Kalitine <philippe.kalitine@gmail.com> (http://philippe.kalitine.name/)",
  "bugs": {
    "url": "https://github.com/coast-team/netflux/issues"
  },
  "keywords": ["netflux", "webRTC", "p2p", "peer", "network"],
  "files": ["dist/"],
  "scripts": {
    "prebuild": "uglifyjs ./node_modules/webrtc-adapter/out/adapter_no_edge_no_global.js -c -o webrtc-adapter.js",
    "build": "rm -rf dist && node rollup.config.js",
    "start-node-scripts": "rm -rf .rolledupScript && node script/rollup.config.js && pm2 startOrRestart process.yml",
    "rollup-node-tests": "rm -rf .rolledupTest && node test/rollup.config.js",
    "pretest:browsers": "npm run build && npm run start-node-scripts",
    "test:browsers": "karma start",
    "pretest": "npm run build && npm run rollup-node-tests && npm run start-node-scripts",
    "test": "node jasmine.conf.js && karma start",
    "test:chrome": "npm run test:browsers -- --browsers Chrome",
    "test:firefox": "npm run test:browsers -- --browsers Firefox",
    "test:node": "npm run pretest && node jasmine.conf.js",
    "test:coverage": "rm -rf coverage && npm run pretest && node jasmine.conf.js && karma start -- coverage",
    "test:travis": "npm run pretest && node jasmine.conf.js && karma start -- travis",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "lint": "eslint ./",
    "doc": "esdoc -c esdoc.json",
    "precommit": "npm run test:coverage",
    "commitmsg": "validate-commit-msg"
  },
  "dependencies": {
    "text-encoding": "^0.6.4",
    "webrtc-adapter": "^2.1.0",
    "ws": "^1.1.1"
  },
  "peerDependencies": {
    "wrtc": "0.0.x"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "commitizen": "^2.4.6",
    "cz-conventional-changelog": "^1.1.5",
    "esdoc": "^0.5.2",
    "eslint": "^3.7.0",
    "eslint-config-conaclos": "^1.2.0",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "husky": "^0.12.0",
    "istanbul": "^0.4.3",
    "jasmine": "^2.4.2",
    "jasmine-core": "^2.4.2",
    "jasmine-spec-reporter": "^3.0.0",
    "json": "^9.0.3",
    "karma": "^1.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.0.0",
    "karma-coverage-es6": "^0.2.7",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-rollup-preprocessor": "^3.0.3",
    "karma-spec-reporter": "0.0.26",
    "pm2": "^2.0.12",
    "rollup": "^0.40.2",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-filesize": "^1.0.0",
    "rollup-plugin-includepaths": "^0.1.5",
    "rollup-plugin-istanbul": "^1.0.0",
    "rollup-plugin-multi-entry": "^2.0.1",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-uglify": "^1.0.1",
    "semantic-release": "^6.3.2",
    "sigver": "^8.1.0",
    "uglify-js": "^2.7.3",
    "validate-commit-msg": "^2.8.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
